<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" styleClass="login-container"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.smartpos.controller.LoginController">
    
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Text styleClass="title" text="SmartPOS"/>
    
    <VBox spacing="10.0" styleClass="form-container">
        <TextField fx:id="loginField" promptText="Identifiant" styleClass="text-field"/>
        <PasswordField fx:id="passwordField" promptText="Mot de passe" styleClass="text-field"/>
        <Button fx:id="loginButton" onAction="#handleLogin" text="Connexion" styleClass="button"/>
    </VBox>
    
    <Label fx:id="errorLabel" styleClass="error-label"/>
</VBox> 